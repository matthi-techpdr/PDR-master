                @if (ViewBag.Teams != null)
                {
                        <label>Filter by teams:</label>
        @Html.DropDownList("team", ViewBag.Teams as IEnumerable<SelectListItem>, new { id = "team" })
                }
        <label>@Company.FilterCaption</label>
        @Html.DropDownList("states", Model, new { id = "UsaStates" })
    </span>
</div>