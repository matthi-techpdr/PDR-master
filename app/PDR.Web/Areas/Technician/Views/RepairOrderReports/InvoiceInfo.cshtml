@using PDR.Web.Areas.Technician.Models.Reports
@model InvoiceReportModel
@{
    ViewBag.ReportsIsActive = "ui-tabs-selected ui-state-active";
    ViewBag.Title = "View invoice report";
    Bundles.Reference("Content/js/Pages/Technician/InitInvoiceReportInfoGrid.js");
}
<div class="links">
    @Html.Hidden("reportId", Model.Id)
    <a href="javascript:void(0);" class="active">@Html.DisplayFor(x => x.Title)</a> <span
        class="gridFilter">
        <label>
            Filter by customers:
        </label>
        @Html.DropDownList("customers", (IEnumerable<SelectListItem>)ViewData["customers"], new { id = "Customers" })
    </span>
    <label style="margin-left: 10px;">
        From:</label>
    <input type="text" id="from" class="date-filter" readonly="readonly" value="@ViewData["start"]" />
    <label>
        To:</label>
    <input type="text" id="to" class="date-filter" readonly="readonly" value="@ViewData["end"]"  />
</div>
<div id="tabs-1" class="ui-tabs-panel">
    <div class="repair-orders-content">
        <table id="invoiceReportInfoGrid">
        </table>
        <div id="pager">
        </div>
    </div>
</div>
